# ========================================
# YShop-Drink 生产环境配置示例
# 使用方法：复制此文件为 .env 并修改配置
# ========================================

# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# ========================================
# 数据库配置
# ========================================
DB_MASTER_URL=jdbc:mysql://your-db-host:3306/yixiang-drink?useSSL=true&serverTimezone=Asia/Shanghai&allowPublicKeyRetrieval=true&nullCatalogMeansCurrent=true
DB_MASTER_USERNAME=your_username
DB_MASTER_PASSWORD=your_secure_password

DB_SLAVE_URL=jdbc:mysql://your-slave-db-host:3306/yixiang-drink?useSSL=true&serverTimezone=Asia/Shanghai&allowPublicKeyRetrieval=true&nullCatalogMeansCurrent=true
DB_SLAVE_USERNAME=your_slave_username
DB_SLAVE_PASSWORD=your_slave_password

# ========================================
# Redis 配置
# ========================================
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DATABASE=0

# ========================================
# MyBatis 加密密钥
# ========================================
MYBATIS_ENCRYPT_KEY=your_32_char_encryption_key_here

# ========================================
# Druid 监控配置
# ========================================
DRUID_USERNAME=druid_admin
DRUID_PASSWORD=your_druid_password

# ========================================
# 微信公众号配置
# ========================================
WX_MP_APP_ID=your_mp_app_id
WX_MP_SECRET=your_mp_secret

# ========================================
# 微信小程序配置
# ========================================
WX_MINIAPP_APPID=your_miniapp_appid
WX_MINIAPP_SECRET=your_miniapp_secret

# ========================================
# 钉钉配置
# ========================================
DINGTALK_CLIENT_ID=your_dingtalk_client_id
DINGTALK_CLIENT_SECRET=your_dingtalk_client_secret

# ========================================
# 企业微信配置
# ========================================
WECHAT_ENTERPRISE_CLIENT_ID=your_wechat_enterprise_client_id
WECHAT_ENTERPRISE_CLIENT_SECRET=your_wechat_enterprise_client_secret
WECHAT_ENTERPRISE_AGENT_ID=your_agent_id

# ========================================
# RabbitMQ 配置
# ========================================
RABBITMQ_HOST=your-rabbitmq-host
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=your_rabbitmq_username
RABBITMQ_PASSWORD=your_rabbitmq_password

# ========================================
# 快递查询配置
# ========================================
KD_NIAO_API_KEY=your_kdniao_api_key
KD_NIAO_BUSINESS_ID=your_kdniao_business_id
KD100_KEY=your_kd100_key
KD100_CUSTOMER=your_kd100_customer

# ========================================
# Mock 登录配置（生产环境必须关闭）
# ========================================
# MOCK_SECRET=disabled_in_production
